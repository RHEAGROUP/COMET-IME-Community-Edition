<dxb:BarCheckItem x:Class="CDP4LogInfo.Views.LogInfoControls"
                  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                  xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
                  xmlns:dxb="http://schemas.devexpress.com/winfx/2008/xaml/bars"
                  xmlns:ribbon="clr-namespace:CDP4Composition.Ribbon;assembly=CDP4Composition"
                  Name="OpenCloseLogPanel"

                  ribbon:CDP4RibbonMerge.MergePage="View"
                  ribbon:CDP4RibbonMerge.MergePageGroup="Data Inspection"
                  ribbon:CDP4RibbonMerge.GroupMergeOrderInPage="2000"
                  MergeOrder="9001"

                  Command="{Binding OpenClosePanelCommand}"
                  Content="Log"
                  Glyph="{dx:DXImage Image=info_128x128.png}"
                  Hint="Open or close the Log"
                  IsChecked="{Binding IsChecked,
                                          Mode=TwoWay}"
                  RibbonStyle="Large">
</dxb:BarCheckItem>